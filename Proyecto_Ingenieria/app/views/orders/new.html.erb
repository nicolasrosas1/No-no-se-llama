<% @page_title = "Solicitud de materiales" %>
<div  style= "margin: auto; width: 50%; padding: 10px; text-align: center">
  <h1>Registrar solicitud de materiales</h1>
  <%= form_for(:order, :url => {:controller => 'orders', :action => 'create'}) do |f| %>
    <p> Fecha de entrega:</br> <%= f.date_field :fecha_entrega%> </p>
    <p> Direccion entrega:</br> <%= f.text_field :direccion%> </p>
    <%= f.collection_select(:materials, @lista_materiales, :id, :nombre, {include_blank: true}, {multiple: true}) %>
    <%= f.submit :Registrar %>

  <% end %>
</div>
