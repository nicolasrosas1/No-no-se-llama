

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Ingreso de usuarios</h1>
    <%= form_for(:session, url: '/login') do |f| %>
      <p>
        <%= f.label :correo %>
        <%= f.text_field :correo%>
      </p>
      <p>
        <%= f.label :password %>
        <%= f.password_field :password%>
      </p>
      <%= f.submit "Ingreso", class: "btn btn-primary" %>
    <% end %>

    <p>Nuevo usuario? <%= link_to "Registrate", '/signup' %></p>
  </div>
</div>
