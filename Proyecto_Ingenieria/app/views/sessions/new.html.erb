<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: '/login') do |f| %>
      <p>
        <%= f.label :usuario %>
        <%= f.text_field :usuario%>
      </p>
      <p>
        <%= f.label :password %>
        <%= f.password_field :password%>
      </p>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", '/signup' %></p>
  </div>
</div>
